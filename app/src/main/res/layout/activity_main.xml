<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_222sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_login"
            android:hint="Usuario"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableLeft="@drawable/ic_contrasena"
            android:hint="Contraseña"
            android:inputType="textWebPassword"
            android:textColor="@android:color/darker_gray" />


        <Button
            android:id="@+id/button_inicio"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/button_style"
            android:text="Iniciar de Secion"
            android:textColor="@android:color/background_light"

            tools:text="Inicio de Secion" />

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_style1"
            android:drawableLeft="@drawable/ic_icono_gmail"
            android:text="Ingresa con Gmail"
            android:textColor="@android:color/darker_gray" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:checked="false"
            android:text="Terminos y Condiciones"
            android:textColor="@android:color/darker_gray"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@android:color/background_dark"
            android:textColorLink="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="none"
            android:text="¿Olvidaste tu contraseña?" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="@dimen/_129sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#FFFFFF"
            android:text="Crear Cuenta"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>
</ScrollView>



