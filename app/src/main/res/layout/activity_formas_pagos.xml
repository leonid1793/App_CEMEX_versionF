<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/tools_carrito"
        android:id="@+id/tollvar_carrito"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        >


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="388dp"
            android:layout_weight="1"
            android:text="Cancelar pago" />

        <Button
            android:id="@+id/button3"
            android:layout_width="196dp"
            android:layout_height="73dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="432dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Pagar Pedido"
            android:textColor="@color/colorwhite" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="275dp"
            android:layout_marginBottom="630dp"
            android:layout_weight="1"
            android:text="Formas de Pago " />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="101dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="584dp"
            android:layout_weight="1"
            android:text="Deposito"
            android:textCursorDrawable="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="101dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="585dp"
            android:layout_weight="1"
            android:text="Efecitvo"
            android:textCursorDrawable="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="101dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="270dp"
            android:layout_marginBottom="585dp"
            android:layout_weight="1"
            android:text="Tarjeta"
            android:textCursorDrawable="@color/colorPrimary" />

    </RelativeLayout>

</LinearLayout>